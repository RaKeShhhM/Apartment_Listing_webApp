<% layout("/layouts/boilerplate.ejs") %>

<style>
  /* Container background accent */
  .review-section {
    background: #f8f9fa;
    padding: 2rem 0;
  }

  /* Card styling */
  .review-card {
    border: none;
    border-radius: 1rem;
    box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    transition: transform 0.2s;
  }
  .review-card:hover {
    transform: translateY(-4px);
  }

  /* Form card header */
  .review-form-header {
    background: #fff;
    border-bottom: none;
    text-align: center;
    padding: 1.5rem;
    border-radius: 1rem 1rem 0 0;
  }
  .review-form-header h4 {
    margin: 0;
    font-weight: 600;
    color: #0d6efd;
  }

  /* Preserve your existing starability-slot effects */
  .starability-slot {
    --star-size: 2rem;
    display: inline-block;
    margin: 0 auto 1.5rem;
  }

  /* Comment textarea and submit */
  .btn-review {
    width: 100%;
    font-weight: 500;
  }
  .form-control:focus {
    box-shadow: 0 0 0 0.2rem rgba(13,110,253,0.25);
  }
</style>

